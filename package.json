{
  "name": "ramc-deployment",
  "version": "1.0.0",
  "description": "RAMC Deployment",
  "main": "index.js",
  "scripts": {
    "start": "npx ts-node src/app.ts",
    "dev": "npx nodemon --exec \"npx ts-node src/app.ts\"",
    "build": "npx tsc",
    "start:prod": "node dist/app.js",
    "test": "npx jest --runInBand --detectOpenHandles --testTimeout=30000",
    "test:coverage": "npx jest --coverage --runInBand --detectOpenHandles --testTimeout=30000",
    "test:watch": "npx jest --watchAll"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mysql2": "^3.1.0",
    "semver": "^7.7.2",
    "simple-update-notifier": "^2.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.14",
    "glob": "^11.0.3",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.4.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions"
  ]
}
